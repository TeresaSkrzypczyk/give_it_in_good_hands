.wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;

  .registration {
    list-style-type: none;
    font-size: 0.75rem;
    margin: 2rem 0;

    li {
      cursor: pointer;
      display: inline-block;
      margin-left: 0.5rem;
      border: 1px solid transparent;
      transition: color 0.5s ease-in-out;
    
      & > a {
        text-decoration: none;
        color: $grey_dark;
        padding: 0.5rem 1rem;
        display: block;  
      }

      &:last-child {
        border: 1px solid $yellow_light;
      }

      &:hover { 
        border: 1px solid $yellow_light;
      }

      // &:focus {
      //   border: 1px solid $yellow_light;
      // }

    }

  }

  .navigation {
    list-style-type: none;
  
    li {
      cursor: pointer;
      display: inline-block;
      color: $grey_dark;
      margin: 0.5rem;
      border: 1px solid transparent;
      transition: color 0.5s ease-in-out;

      &:first-child {
        border: 1px solid $grey_dark;
      }

      &:hover { 
        border: 1px solid $grey_dark;
      }

      & > a {
        text-decoration: none;
        color: $grey_dark;
        padding: 0.5rem 1rem;
        display: block;
      }

    }

  }



}